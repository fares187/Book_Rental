@page
@inject SignInManager<ApplicationUser> _signinMangager
@model ConfirmEmailChangeModel
@{
	Layout = "";
	ViewData["Title"] = "Confirm email change";
}
<div class="d-flex flex-column flex-root">
	<!--begin::Page bg image-->
	<style>
		body {
			background-image: url('/assats/images/bg8.jpg');
		}

		[data-theme="dark"] body {
			background-image: url('/assats/images/bg8-dark.jpg');
		}</style>
	<!--end::Page bg image-->
	<!--begin::Authentication - Signup Welcome Message -->
	<div class="d-flex flex-column flex-center flex-column-fluid">
		<!--begin::Content-->
		<div class="d-flex flex-column flex-center text-center p-10">
			<!--begin::Wrapper-->
			<div class="card card-flush w-lg-650px py-5">
				<div class="card-body py-15 py-lg-20">
					<!--begin::Logo-->
					<div class="mb-14">
						<a href="/" class="">
							<img alt="Logo" src="~/assats/images/logo.png" class="h-60px">
						</a>
					</div>
					<!--end::Logo-->
					<!--begin::Title-->
					<h1 class="fw-bolder text-gray-900 mb-5">@ViewData["Title"]</h1>
					<!--end::Title-->
					<!--begin::Action-->
					<div class="fs-6 mb-8">
						<span class="fw-semibold text-gray-500">Thank you for confirming your email change.</span>
					</div>


					<!--begin::Illustration-->
					<div class="mb-0">
						<img src="~/assats/images/Ok-amico.svg class="mw-100 mh-300px" alt="">
					
					</div>
					<!--end::Illustration-->
				</div>
			</div>
			<!--end::Wrapper-->
		</div>
		<!--end::Content-->
	</div>

</div>
<h1>@ViewData["Title"]</h1>
<partial name="_StatusMessage" model="Model.StatusMessage" />
