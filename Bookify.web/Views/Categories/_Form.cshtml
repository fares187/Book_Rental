@model CreateCategoriesViewModel


<form asp-controller="Categories" asp-action="@(Model?.id >0 ? "Edit" : "Create")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="OnModelBegin"
      data-ajax-success="onModelSuccess"
      data-ajax-failure="showfailure"
      data-ajax-complete="OnModelComplete">
    @if (Model?.id > 0)
    {

        <input type="hidden" asp-for="id" />
    }
    <div class="mb-5 ">
    <div class="form-floating mb-4">
        <input type="text" class="form-control text-light" placeholder="Name" asp-for="Name">
        <label asp-for="Name"></label>

    </div>
   
        <span class="text-danger d-block" asp-validation-for="Name"></span>

    </div>
    <partial name="_ModelFooter" />
</form>

