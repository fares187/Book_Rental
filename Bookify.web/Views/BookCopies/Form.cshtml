@model BookCopyFormViewModel


<form asp-action="@(Model!.Id>0 ? "Edit":"Create")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="OnModelBegin"
      data-ajax-success="@(Model!.Id>0 ? "OnEditCopySuccess":"OnAddCopySuccess")"
      data-ajax-failure="showfailure"
      data-ajax-complete="OnModelComplete">
    <input type="hidden" asp-for="BookId" />
    @if (Model?.Id > 0)
    {

        <input type="hidden" asp-for="Id" />
    }
    <div class="mb-5 ">
        <div class="form-floating mb-4">
            <input type="text" class="form-control text-light" placeholder="Edition" asp-for="EditionNumber" value="@(Model?.Id>0? Model.EditionNumber:string.Empty)">
            <label asp-for="EditionNumber"></label>

        </div>

        <span class="text-danger d-block" asp-validation-for="EditionNumber"></span>

    </div>
    @if (Model!.showRentalInput)
    {
        <div class="mb-5 ">
            <div class="form-check form-switch form-check-solid form-check-custom mb-4">
                <input class="form-check-input" type="checkbox" placeholder="Edition" asp-for="IsAvailableForRental">
                <label class="form-check-label" asp-for="IsAvailableForRental"></label>

            </div>

            <span class="text-danger d-block" asp-validation-for="IsAvailableForRental"></span>

        </div>
    }
    <partial name="_ModelFooter" />
    
</form>

