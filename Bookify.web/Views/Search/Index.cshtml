@{
    ViewData["Title"] = "Find a Book";
}
@section Styles{
    <link href="~/css/typeahead.css" rel="stylesheet" />
}

<div class="p-10">
    <div class="card mb-12">
        <!--begin::Hero body-->
        <div class="card-body flex-column p-5">
            <!--begin::Hero content-->
            <div class="d-flex align-items-center h-lg-300px p-5 p-lg-15">
                <!--begin::Wrapper-->
                <div class="d-flex flex-column align-items-start justift-content-center flex-equal me-5">
                    <!--begin::Title-->
                    <h1 class="fw-bold fs-4 fs-lg-1 text-gray-800 mb-5 mb-lg-10">Find a Book</h1>
                    <!--end::Title-->
                    <!--begin::Input group-->
                    <div class=" d-flex w-100" id="remote">

                        <span class="d-flex justify-content-center mt-1 ds-3 text-primary align-center">
                            <svg width="30" height="30" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M21.7 18.9L18.6 15.8C17.9 16.9 16.9 17.9 15.8 18.6L18.9 21.7C19.3 22.1 19.9 22.1 20.3 21.7L21.7 20.3C22.1 19.9 22.1 19.3 21.7 18.9Z" fill="currentColor" />
                                <path opacity="0.3" d="M11 20C6 20 2 16 2 11C2 6 6 2 11 2C16 2 20 6 20 11C20 16 16 20 11 20ZM11 4C7.1 4 4 7.1 4 11C4 14.9 7.1 18 11 18C14.9 18 18 14.9 18 11C18 7.1 14.9 4 11 4ZM8 11C8 9.3 9.3 8 11 8C11.6 8 12 7.6 12 7C12 6.4 11.6 6 11 6C8.2 6 6 8.2 6 11C6 11.6 6.4 12 7 12C7.6 12 8 11.6 8 11Z" fill="currentColor" />
                            </svg>
                            </span>
                      
                       
                        <input type="text" class="form-control d-block typeahead" placeholder="Search by book title or author name">
                    </div>
                    <!--end::Input group-->
                </div>
                <!--end::Wrapper-->
                <!--begin::Wrapper-->
                <div class="flex-equal d-flex justify-content-center align-items-end ms-5">
                    <!--begin::Illustration-->
                    <img src="~/assats/images/Search-rafiki.png" alt="" class="mw-100 mh-125px mh-lg-275px mb-lg-n12">
                    <!--end::Illustration-->
                </div>
                <!--end::Wrapper-->
            </div>
            <!--end::Hero content-->
           
        </div>
        <!--end::Hero body-->
    </div>
</div>
@section DataTable{
<script src="~/lib/typeahead.js/typeahead.bundle.min.js"></script>
    <script src="~/lib/handlebars.js/handlebars.min.js"></script>
}
@section Scripts{
    <script src="~/js/search.js" asp-append-version="true"></script>
}