@model RentalDetailsViewModel
@{
    ViewData["Title"] = "Rental Details";
}
@if (Model.RentalDate.Date == DateTime.Today)
{
    
    <div class="d-flex mb-6" style="justify-content:center;">



        <a asp-controller="Rentals" asp-action="Edit" asp-route-id="@Model.id" class="btn btn-primary " style="width:30%;"> Edit</a>

    </div>
}else if (Model.Copies.Any(c => !c.ReturnDate.HasValue ))
{
    <div class="d-flex mb-6" style="justify-content:center;">



        <a asp-controller="Rentals" asp-action="Return" asp-route-id="@Model.id" class="btn btn-primary " style="width:30%;"> Return</a>

    </div>
}
<div class="d-flex flex-wrap">
    @foreach (var Copy in Model.Copies)
    {
        <div class="card me-5  mb-5" style="width: 18rem;
              border-color: white;
             border-style: solid;
             border-width: 1px;
             border-radius: 8px;
             ">
            <div style="height:220px;overflow: hidden;align-items: center; justify-content: center;" class=" card-img-top d-flex">
                <img src="@Copy.ImageThumbnailUrl" style="width:100%; height:auto;" class="" alt="@Copy.Title" />

            </div>


            <div class="card-body">
                <h3 class="card-title mb-4">@Copy.Title</h3>
                <hr>
                <div class="d-flex" style="justify-content: space-between;">
                    Rental Date: <span>@Copy.RentalDate.ToString("dd MMM, yyyy")</span>
                </div>


                <div class="d-flex" style="justify-content: space-between;">
                    Return Date: <span>@Copy.ReturnDate?.ToString("dd MMM, yyyy")</span>
                </div>



                <div class="d-flex" style="justify-content: space-between;">
                    End Date: <span>@Copy.EndDate.ToString("dd MMM, yyyy")</span>
                </div>



                <div class="d-flex" style="justify-content: space-between;">
                    Extend Date: <span>@Copy.ExtendedOn?.ToString("dd MMM, yyyy")</span>
                </div>




            </div>





        </div>

    }



</div>

