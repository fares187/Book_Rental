@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery antiforgery

@{
    ViewData["Title"] = "Books";
}
@section Styles {
    <link href="~/assats/plugins/datatables/datatables.bundle.css" rel="stylesheet" />

}
<div class="alert justify-content-between alert-info d-flex align-items-center p-5 mb-10">

    <div class="hstack align-content-center ">
        <span class="svg-icon me-2 svg-icon-3x text-info svg-icon-gray-500">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
                <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z" />
            </svg>

        </span>
        <div class="d-flex flex-column">
            <h4 class="mb-1 text-info">Books</h4>

        </div>
    </div>
    <div class="card-toolbar justify-content-end">
        <a type="button" class="btn btn-sm btn-success"
           asp-controller="Books" asp-action="Create">
            <i class="bi bi-plus-square-fill me-3"></i>

            Add
        </a>
    </div>
</div>
<div class="card shadow-sm">
    <div class="card-header align-items-center py-5 gap-2 gap-md-5">
        <div class="card-title">
            <!--begin::Search-->
            <div class="d-flex align-items-center position-relative my-1">
                <span class="svg-icon fs-1 position-absolute ms-4">
                    <i class="bi bi-search fs-1"></i>
                </span>
                <input type="text" data-kt-filter="search" class="form-control form-control-solid form-control form-control-solid-solid w-250px ps-14" placeholder="Search by title or author..." />
            </div>
            <!--end::Search-->
            <!--begin::Export buttons-->
            <div id="kt_datatable_example_1_export" class="d-none"></div>
            <!--end::Export buttons-->
        </div>
       
    </div>

    <div class="card-body"> 

      

        <table class="table" id="books" >
            <thead>
                <tr>
                    <th></th>
                    <th>Book</th>
                    <th>Publisher</th>
                    <th>Publishing Date</th>
                    <th>Hall</th>
                    <th>Categories</th>
                    <th>Rental status</th>
                    <th>Status</th>
                    <th class="text-end pe-10">Action</th>

                </tr>
            </thead>
            <tbody>
                @* books will be added here*@


            </tbody>
        </table>

    </div>


</div>

<input type="hidden" name="__RequestVerificationToken" value="@antiforgery.GetAndStoreTokens(Context).RequestToken" />
@section DataTable{
    <script src="~/assats/plugins/datatables/datatables.bundle.js"></script>
}
@section scripts{
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script src="~/js/books.js" asp-append-version="true"></script>
}