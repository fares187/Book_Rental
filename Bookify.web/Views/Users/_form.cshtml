@model UserFormViewModel

<form asp-action="@(!string.IsNullOrEmpty(Model?.Id)  ? "Edit" : "Create")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="OnModelBegin"
      data-ajax-success="onModelSuccess"
      data-ajax-failure="showfailure"
      data-ajax-complete="OnModelComplete">
    @if (!string.IsNullOrEmpty(Model?.Id))
    {

        <input type="hidden" asp-for="Id" />
    }
    <div class="mb-5 ">
        <div class="form-floating mb-4">
            <input type="text" class="form-control form-control-solid text-light" placeholder="Full Name" asp-for="fullname">
            <label asp-for="fullname"></label>

        </div>

        <span class="text-danger d-block" asp-validation-for="fullname"></span>

    </div>
    <div class="mb-5 ">
        <div class="form-floating mb-4">
            <input type="text" class="form-control form-control-solid  text-light" placeholder="User Name" asp-for="UserName">
            <label asp-for="UserName"></label>

        </div>
        <span class="text-danger d-block" asp-validation-for="UserName"></span>
    </div>
    <div class="mb-5 ">
        <div class="form-floating mb-4">
            <input type="email" class="form-control form-control-solid  text-light" placeholder="Email" asp-for="Email">
            <label asp-for="Email"></label>

        </div>
        <span class="text-danger d-block" asp-validation-for="Email"></span>
    </div>
    <div class=" mb-3">
        <select class="form-select form-select-solid js-select2" data-placeholder="select a roles" placeholder="select a categories" asp-for="SelectedRoles" asp-items="@Model.Roles">
        </select>

    </div>
    <span asp-validation-for="SelectedRoles" class="text-danger d-block"></span>
    @if (string.IsNullOrEmpty(Model?.Id))
    {
        <div class="mb-5 ">
            <div class="form-floating mb-4">
                <input type="password" class="form-control form-control-solid text-light" placeholder="Password" asp-for="Password">
                <label asp-for="Password"></label>

            </div>
            <span class="text-danger d-block" asp-validation-for="Password"></span>
        </div>
        <div class="mb-5 ">
            <div class="form-floating mb-4">
                <input type="password" class="form-control form-control-solid text-light" placeholder="confirm Password" asp-for="ConfirmPassword">
                <label asp-for="ConfirmPassword"></label>

            </div>
            <span class="text-danger d-block" asp-validation-for="ConfirmPassword"></span>
        </div>
    }

    <partial name="_ModelFooter" />
</form>